{
    "env": {
        "test": {
            "presets": [["env", { "modules": "commonjs" }]],
            "plugins": ["dynamic-import-node"]
        },
        "production": {
        "presets": [["env", { "modules": false }]]
        }
    },
    "presets": [
        ["@babel/preset-env", {
            "targets": { 
                "node": 6,
                "browsers": [
                    "> 1%",
                    "last 2 versions"
                ] 
            }
        }],
        "@babel/preset-react"
    ],
    "plugins": [
        "@babel/plugin-syntax-dynamic-import",
        "@babel/plugin-proposal-class-properties",
        "babel-plugin-styled-components",
        "lodash"
    ]
}